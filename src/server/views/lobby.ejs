<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lobby - Uno</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f5f5f5;
    }
    .logo {
    height: 50px; /* Adjust based on your logo size */
    margin-right: 15px;
    }
    
    .container {
      width: 100%;
      max-width: 1000px;
      height: 600px;
      border: 2px solid #333;
      background-color: #fff;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      border-bottom: 2px solid #333;
    }
    
    .header-left {
      display: flex;
      align-items: center;
    }
    
    .logo {
      font-size: 28px;
      font-weight: bold;
      border: 2px solid #333;
      border-radius: 50%;
      padding: 5px 10px;
      margin-right: 15px;
    }
    
    .welcome {
      font-size: 18px;
    }
    
    .header-right {
      display: flex;
      align-items: center;
    }
    
    .header-right span {
      margin-right: 10px;
    }
    
    .btn {
      padding: 8px 15px;
      border: 2px solid #333;
      border-radius: 20px;
      background-color: #fff;
      font-size: 14px;
      cursor: pointer;
      text-decoration: none;
      color: #000;
      margin-left: 10px;
    }
    
    .main-content {
      display: flex;
      flex: 1;
      overflow: hidden;
    }
    
    .rooms-section {
      flex: 2;
      padding: 15px;
      border-right: 2px solid #333;
      overflow-y: auto;
    }
    
    .rooms-header {
      font-size: 20px;
      margin-bottom: 15px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 5px;
    }
    
    .room-list {
      list-style: none;
    }
    
    .room-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 10px;
      border-bottom: 1px solid #eee;
    }
    
    .room-info {
      flex: 3;
    }
    
    
    .join-btn {
      flex: 1;
      padding: 6px 12px;
      border: 2px solid #333;
      border-radius: 15px;
      background-color: #fff;
      font-size: 14px;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      color: #000;
    }
    
    .chat-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      border-left: 2px solid #333;
      overflow: hidden;
    }
    
    .chat-header {
      padding: 10px 15px;
      font-size: 18px;
      border-bottom: 1px solid #ccc;
    }
    
    .chat-messages {
      flex: 1;
      padding: 10px 15px;
      overflow-y: auto;
    }
    
    .message {
      margin-bottom: 10px;
      padding: 5px 0;
    }
    
    .message-sender {
      font-weight: bold;
      margin-bottom: 3px;
    }
    
    .message-text {
      background-color: #f1f1f1;
      padding: 8px 10px;
      border-radius: 15px;
      display: inline-block;
    }
    
    .chat-input {
      display: flex;
      padding: 10px;
      border-top: 1px solid #ccc;
    }
    
    .chat-input input {
      flex: 1;
      padding: 8px 12px;
      border: 2px solid #333;
      border-radius: 20px;
      font-size: 14px;
      margin-right: 10px;
    }
    
    .chat-input button {
      padding: 8px 15px;
      border: 2px solid #333;
      border-radius: 20px;
      background-color: #fff;
      font-size: 14px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="header-left">
        <img src="https://upload.wikimedia.org/wikipedia/commons/f/f9/UNO_Logo.svg" alt="UNO" class="logo">
        <div class="welcome">Welcome, <%= locals.username || 'Guest' %></div>
      </div>
      <div class="header-right">
        <span>Game Creation</span>
        <a href="/games/create" class="btn">Create Game</a>
        <a href="/auth/logout" class="btn">Log Out</a>
      </div>
    </div>
    
    <div class="main-content">
      <div class="rooms-section">
        <h2 class="rooms-header">Available Rooms</h2>
        <ul class="room-list">
          <% 
          // Some placeholder
          const rooms = [
            { id: 1, players: 1, maxPlayers: 4, status: 'Waiting' },
            { id: 2, players: 4, maxPlayers: 4, status: 'In Game' }
            
          ];
          %>
          
          <% rooms.forEach(room => { %>
            <li class="room-item">
              <div class="room-info">
                <div>Room #<%= room.id %> (<%= room.players %>/<%= room.maxPlayers %>)</div>
                <div class="room-status <%= room.status.toLowerCase().replace(' ', '-') %>">
                  <%= room.status %>
                </div>
              </div>
              <% if (room.status === 'Waiting') { %>
                <a href="/games/join/<%= room.id %>" class="join-btn">Join</a>
              <% } %>
            </li>
          <% }); %>
        </ul>
      </div>
      
      <div class="chat-section">
        <div class="chat-header">
          Live Chat
        </div>
        <div class="chat-messages">
          <% 
          // Sample messages - in a real app, these would come from the server
          const messages = [
            { sender: 'Player1', text: 'placeholder' }
          ];
          %>
          
          <% messages.forEach(message => { %>
            <div class="message">
              <div class="message-sender"><%= message.sender %>:</div>
              <div class="message-text"><%= message.text %></div>
            </div>
          <% }); %>
        </div>
        <div class="chat-input">
          <input type="text" placeholder="Type a message...">
          <button type="button">Send</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.querySelector('.chat-input button').addEventListener('click', function() {
      const input = document.querySelector('.chat-input input');
      const message = input.value.trim();
      
      if (message) {
        // In a real app, you would send this to the server
        // For now, just log it to console
        console.log('Message sent:', message);
        input.value = '';
      }
    });
  </script>
</body>
</html>